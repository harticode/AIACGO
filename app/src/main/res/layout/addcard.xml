<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cloud">


    <ImageView
        android:id="@+id/img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/network"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:textColor="#000"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:text="pick up - جيب معاك" />


    <EditText
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:ems="10"
        android:hint="Where - فين لبلاصة لاش غادي"
        android:inputType="textPostalAddress"
         />
    <android.support.v7.widget.CardView
        android:id="@+id/datecard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="2dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp"
        android:layout_below="@+id/place"
        >

        <TextView
            android:id="@+id/date"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Date - إينا يوم"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/timecard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="2dp"
        android:layout_below="@+id/datecard"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="إينا وقت غادي - TIME "
            android:textSize="16sp"
            android:layout_margin="12dp"
            android:layout_centerHorizontal="true"
             />
    </android.support.v7.widget.CardView>


<Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/timecard"
        android:layout_centerHorizontal="true"></Spinner>


    <Button
        android:id="@+id/save"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/img2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/success"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/fui_transparent"/>


</RelativeLayout>