<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#bd373161"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="24dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/close"/>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/photouser"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:src="@drawable/userprofile"
        app:civ_border_color="@color/browser_actions_bg_grey"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/textuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photouser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="UserName"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textuser"
        app:cardCornerRadius="7dp"
        app:cardElevation="2dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/fui_buttonShadow"
                android:gravity="center">


                <ImageButton
                    android:id="@+id/callbtn"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="52dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/call"
                    />
                <ImageButton
                    android:id="@+id/smsbtn"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/sms"/>


            </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>